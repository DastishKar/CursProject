<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:layout_marginTop="50dp">


    <!-- Добавьте здесь элементы интерфейса, такие как текст, кнопки и др. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Хотите подписаться на новости  "
            android:layout_gravity="start"
            android:textSize="15sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/dialogCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City?"
            android:layout_gravity="end"
            android:textSize="15sp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start">

        <CheckBox
            android:id="@+id/topicCheckbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicago"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/topicCheckbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New-York"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/topicCheckbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Astana"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/yesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подписаться"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/noButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отписаться"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>


</LinearLayout>
